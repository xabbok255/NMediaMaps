<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mapsFragmentNav">

    <fragment
        android:id="@+id/mapsFragmentNav"
        android:name="com.xabbok.nmediamaps.MapsFragment"
        android:label="MapsFragment"
        tools:layout="@layout/fragment_maps"/>
    <fragment
        android:id="@+id/objectsFragmentNav"
        android:name="com.xabbok.nmediamaps.ObjectsFragment"
        android:label="fragment_objects"
        tools:layout="@layout/fragment_objects" />
    <action
        android:id="@+id/action_global_objectsFragmentNav"
        app:destination="@id/objectsFragmentNav"
        app:popUpTo="@id/mapsFragmentNav" />
    <action
        android:id="@+id/action_global_mapsFragmentNav"
        app:destination="@id/mapsFragmentNav"
        app:popUpTo="@id/navigation_graph"
        app:popUpToInclusive="true"/>
</navigation>